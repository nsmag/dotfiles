{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "share": "disabled",
  "permission": {
    "bash": {
      "*": "allow"
    }
  },
  "agent": {
    "plan": {
      "permission": {
        "edit": "ask"
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+c,ctrl+d,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "none",
    "sidebar_toggle": "<leader>b",
    "status_view": "<leader>s",
    "session_export": "none",
    "session_new": "none",
    "session_list": "<leader>l",
    "session_timeline": "none",
    "session_share": "none",
    "session_unshare": "none",
    "session_interrupt": "escape",
    "session_compact": "none",
    "session_child_cycle": "<leader>]",
    "session_child_cycle_reverse": "<leader>[",
    "messages_page_up": "pageup",
    "messages_page_down": "pagedown",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "home",
    "messages_last": "end",
    "messages_copy": "none",
    "messages_undo": "none",
    "messages_redo": "none",
    "messages_toggle_conceal": "<leader>h",
    "model_list": "<leader>m",
    "model_cycle_recent": "none",
    "model_cycle_recent_reverse": "none",
    "command_list": "ctrl+p",
    "agent_list": "none",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "<leader>c",
    "input_forward_delete": "none",
    "input_paste": "none",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "history_previous": "up",
    "history_next": "down"
  }
}
